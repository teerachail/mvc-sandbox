@using LocalizedViews
@model Person

<div asp-validation-summary="All">
    <span style="color:red">@Localizer["Validation issues:"]</span>
</div>

<form asp-action="Index" asp-controller="TagHelpers">
    <div>
        <label asp-for="Name"></label>
        <input asp-for="Name" />
    </div>
    <div>
        <label asp-for="Age"></label>
        <input asp-for="Age" />
    </div>
    <div>
        <label asp-for="BirthDate"></label>
        <input asp-for="BirthDate" />
    </div>
    <input type="submit" value="@Localizer["Submit"]" />
</form>