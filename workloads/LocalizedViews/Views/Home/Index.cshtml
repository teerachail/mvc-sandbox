@using BasicViews
@model Person

@Html.ValidationSummary(message: Localizer["Validation issues:"].Value)

@using (Html.BeginForm())
{
    <div>
        @Html.LabelFor(p => p.Name)
        @Html.EditorFor(p => p.Name)
    </div>
    <div>
        @Html.LabelFor(p => p.Age)
        @Html.EditorFor(p => p.Age)
    </div>
    <div>
        @Html.LabelFor(p => p.BirthDate)
        @Html.EditorFor(p => p.BirthDate)
    </div>
    <input type="submit" value="@Localizer["Submit"]" />

    @Html.AntiForgeryToken()
}